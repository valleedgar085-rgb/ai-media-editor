{
  "name": "ai-media-editor",
  "version": "1.0.0",
  "description": "AI-powered media editor desktop application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "build:renderer": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "electron": "electron .",
    "pack": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:mac": "npm run build:renderer && electron-builder --mac",
    "dist:linux": "npm run build:renderer && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "electron",
    "react",
    "media",
    "video",
    "editor",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.ai-media-editor.app",
    "productName": "AI Media Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
